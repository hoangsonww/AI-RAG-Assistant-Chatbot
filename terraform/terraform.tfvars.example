# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control

# General Configuration
environment  = "production"
aws_region   = "us-east-1"
domain_name  = "lumina-ai.yourdomain.com"
backend_domain = "api.lumina-ai.yourdomain.com"
certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/your-cert-id"
alert_email    = "alerts@yourdomain.com"

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnet_cidrs = ["10.0.11.0/24", "10.0.12.0/24", "10.0.13.0/24"]

# ALB Routing
frontend_health_check_path = "/"
backend_health_check_path  = "/health"
backend_path_pattern       = "/api/*"

# ECS Configuration
frontend_image_tag     = "latest"
frontend_cpu           = 512
frontend_memory        = 1024
frontend_desired_count = 2
frontend_min_capacity  = 2
frontend_max_capacity  = 6

backend_image_tag     = "latest"
backend_cpu           = 1024
backend_memory        = 2048
backend_desired_count = 3
backend_min_capacity  = 2
backend_max_capacity  = 12

enable_execute_command = true

# DocumentDB Configuration
documentdb_cluster_size        = 2
documentdb_instance_class      = "db.r5.large"
documentdb_master_username     = "admin"
documentdb_master_password     = "YourSecurePassword123!"  # Change this!
documentdb_backup_retention    = 7
documentdb_backup_window       = "07:00-09:00"
documentdb_maintenance_window  = "sun:05:00-sun:07:00"
documentdb_deletion_protection = true

# ElastiCache Configuration
redis_node_type         = "cache.r6g.large"
redis_num_nodes         = 2
redis_engine_version    = "7.0"
redis_parameter_group_family = "redis7"
redis_automatic_failover = true
redis_multi_az          = true
redis_at_rest_encryption = true
redis_transit_encryption = true
# redis_auth_token      = "SetAStringIfTransitEncryptionEnabled"  # Optional
redis_snapshot_retention = 7

# Application Secrets
jwt_secret        = "your-super-secret-jwt-key"  # Change this!
google_ai_api_key = "your-google-ai-api-key"
pinecone_api_key  = "your-pinecone-api-key"
pinecone_index_name = "lumina-knowledge-base"

# Monitoring
log_retention_days = 30

# CloudFront
enable_cloudfront_logging = true
# cloudfront_log_bucket_name = "existing-log-bucket"  # Optional
cloudfront_price_class = "PriceClass_100"
